{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
<div class="card text-center">
  <div class="card-header">
    liste des taches
  </div>
  <div class="card-body">
    {% for donnee in data %}
   <table class="table">
    <tr class="row">
      <td class="col-lg-2">{{donnee.author}}</td>
      <td class="col-lg-6"> {{donnee.content}} </td>
      <td class="col-lg-2"> {{donnee.rappel| date('y,m,d')}} </td>
      <td class="col-lg-2" >
      <a href="{{path('update',{'id':donnee.id})}}" type="button" class="btn btn-info" data-target="#myModal" data-toggle="modal">update</a> 
      <a href="{{path('delete',{'id':donnee.id})}}" class="btn btn-danger">delete</a>
      </td>
    </tr>
   </table>
   {% endfor %}
  </div>
  <div class="card-footer text-muted">
    <button type="submit" class="btn btn-success pull-right" data-toggle="modal" data-target="#myModal">ajouter une tache</button>
  </div>
</div>
</div>
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog">
      
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Modal Header</h4>
          </div>
          <div class="modal-body">
            {{form_start(form)}}
            {{form_row(form.author)}}
            {{form_row(form.content)}}
            {{form_row(form.rappel)}}
            <button type="submit" class="btn btn-success">envoyer</button>
            {{form_end(form)}}
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
        
      </div>
    </div>
    
{% endblock %}

